<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %>. App to buy and sell between individuals</p>

    <h2>Available Products Now</h2>
    <h3>
      Today, <%= now.toLocaleDateString('es-ES') %> <%=
      now.toLocaleTimeString('es-ES') %>
    </h3>

    <ul>
      <% products.forEach(product => { %>
      <li>
        <h4><%= product.name %></h4>
        <% if (product.sale) { %>
        <p><strong>Lo Vendo</strong></p>
        <% } else { %>
        <p><strong>Lo Compro</strong></p>
        <% } %>
        <p><strong>Price:</strong> <%= product.price %> â‚¬</p>
        <p>
          <strong>Foto:</strong>
          <br />
          <img
            src="/images/<%= product.photo %>"
            alt="<%= product.name %>"
            width="100"
            height="100"
          />
        </p>
        <p><strong>Tags:</strong> <%= product.tags.join(', ') %></p>
        <hr>
      </li />
      <% }); %>
    </ul>
  </body>
</html>
